<div class="container">
    <h1 class="text-center">国名追加</h1>
        <%= form_for(@country,url: admin_countrys_path) do |f| %>

            <table class= "table table-bordered">
                <tr>
                    <th class="col-xs-6">大陸</th>
                    <td align="center"><%= f.collection_select :continent_id, Continent.all,:id,:name %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">写真</th>
                    <td align="center"><%= f.attachment_field :photo %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">名前</th>
                    <td align="center"><%= f.text_field :name %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">緯度</th>
                    <td align="center"><%= f.text_field :latitude %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">軽度</th>
                    <td align="center"><%= f.text_field :longitude %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">通貨</th>
                    <td align="center"><%= f.text_field :money %></td>
                    </tr>

                <tr>
                    <th class="col-xs-6">時差</th>
                    <td align="center"><%= f.text_field :time_difference %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">首都</th>
                    <td align="center"><%= f.text_field :world_heritage %></td>
                </tr>

                <tr>
                    <th class="col-xs-6">言語</th>
                    <td align="center"><%= f.text_field :language %></td>
                </tr>

            </table>
        <%= f.submit "登録",:class=>"create_btn" %>
        <% end %>
</div>

<style>
.create_btn{
    color: #2196F3;
    border: 1px solid #C0C0C0;
    border-radius: 5px;
    background-color:white;
    padding: 20px;
    text-align: center;
    width: 150px;
    margin-left: 500px;
    margin-bottom: 50px;
}
.col-xs-6  {
text-align: center;
}
</style>



