<div class="container">
	<h1 class="text-center">国一覧</h1>
		<div class="country_add_button">
			<button type="button" class="btn btn-default center-block btn-lg">
			<%= link_to" 国　追加", new_admin_country_path %>
			</button>
    	</div>

		<table class="table table-bordered">
			<thead>
		　		<tr style="text-align:center;">
					<th class="col-xs-6">国名</th>
					<th class="col-xs-2">編集</th>
					<th class="col-xs-2">削除</th>
		　		</tr>
	   		</thead>

	    	<tbody>
	      		<% @countrys.each do |country| %>
	        		<tr>
		    			<td align="center"><%= link_to country.name, admin_country_path(country.id) %></td>
						<td align="center"><%= link_to "編集", edit_admin_country_path(country.id) ,class:"btn btn-default" %></td>
						<td align="center"><%= link_to"削除", admin_country_path(country.id),method: :delete,class:"btn btn-default" %></td>
	        		</tr>
          		<%end%>
         	</tbody>
   		 </table>


   		<div class="text-center">
    		<%= paginate @countrys%>
    	</div>
</div>

