<div class="container">
    <div class="row">
        <div class="col-xs-11">

            <h1 class="text-center">記事　詳細</h1>
                    <div class ="article_photo">
                        <%= attachment_image_tag @article, :photo, :fill, 700, 500, format: 'jpeg' %>
                    </div>


                   <table class= "table table-bordered">
                    <tr>
                        <th class="col-xs-3">日程</th>
                        <td align="center"><%= @article.date %></td>
                    </tr>

                    <tr>
                        <th class="col-xs-3">旅行時間</th>
                        <td align="center"><%= @article.start_time.strftime('%H時%M分') %></td>
                    </tr>

                    <tr>
                        <th class="col-xs-3">旅行時間</th>
                        <td align="center"><%= @article.finish_time.strftime('%H時%M分') %></td>
                    </tr>

                     <tr>
                        <th class="col-xs-3">アイコン</th>
                        <td align="center">
                        <%= attachment_image_tag @article.category, :icon, :fill, 50, 50, format: 'jpeg' %></td>
                    </tr>

                    <tr>
                        <th class="col-xs-3">アイコン説明</th>
                        <td align="center"><%= @article.category.explanation %></td>
                    </tr>

                    <tr>
                        <th class="col-xs-3">タイトル</th>
                        <td align="center"><%= @article.title %></td>
                        </tr>

                    <tr>
                        <th class="col-xs-3">説明</th>
                        <td align="center"><%= @article.memo %></td>
                    </tr>

                    <tr>
                        <th class="col-xs-3">評価</th>
                        <td align="center">
                            <div id="star-rate-<%= @article.id %>">
                            </div>
                        </td>
                    </tr>

            </table>

            <button type="button" class="btn btn-default btn-lg btn-block active">
                <%= link_to"一覧",  user_schedule_path(@article.schedule.id)%>
            </button>
        </div>
    </div>
</div>










<script>
          $('#star-rate-<%= @article.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= @article.evaluation %>,
          });
</script>

<style>
.article_photo{
    margin-left: 150px;
}
.col-xs-3  {
    text-align: center;
}
.btn{
    margin-bottom: 30px;
}

</style>
