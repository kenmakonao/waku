<div class="container">
	<div class="row">
        <div class="col-xs-11">
			<div class="continent_name">
				<%=  @continent.name %>
			</div>

			<div class="photo">
				<%= attachment_image_tag @continent, :photo, :fill, 1100, 200, format: 'jpeg' %>
			</div>

			<div class="row">
				<% @countrys.each do |country| %>
					<%= link_to( user_country_path(country.id)) do %>
						<div class="col-md-3">
							<div class="country_name">
								<%=   country.name %>
							</div>

							<div class="country_photo">
								<%= attachment_image_tag country, :photo, :fill, 250, 230, format: 'jpeg' %>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>



