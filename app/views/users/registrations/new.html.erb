<h1 class="text-center">会員登録</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :プロヒィール写真 %><br />
      <%= f.attachment_field :photo, autofocus: true %><h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true %><h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :姓 %><br />
      <%= f.text_field :kanzi_last_name, autofocus: true %><h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :名 %><br />
      <%= f.text_field :kanzi_first_name , autofocus: true %>  <h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :セイ %><br />
      <%= f.text_field :kana_last_name, autofocus: true %></h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :メイ %><br />
      <%= f.text_field :kana_first_name, autofocus: true  %></h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :性別 %><br />
      <%= f.select :sex, [["男性","男性"],["女性", "女性"]] ,class:"form-control" %><h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :好きな国 %><br />
      <%= f.text_field :like_country, autofocus: true %><h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :自己紹介 %><br />
      <%= f.text_area :self_introduction, autofocus: true %><h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %></h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %></h2>
    </div>

    <div class="field">
      <h2 class="text-center">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %></h2>
    </div>

    <div class="actions">
      <h2 class="text-center">
      <%= f.submit "登録" %>
      </h2>
    </div>
  <% end %>


